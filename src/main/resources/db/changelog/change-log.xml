<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet runAlways="true" author="LisunenkoDavid" id="create_schema_utmn" dbms="postgresql">
        <sql dbms="postgresql">
            CREATE SCHEMA utmn;
        </sql>
        <comment>Создание схемы utmn</comment>
    </changeSet>

    <changeSet runAlways="true" author="LisunenkoDavid" id="script1" dbms="postgresql">
        <sqlFile dbms="postgresql"
                 path="scripts/script1.sql"
                 encoding="UTF-8"
                 endDelimiter="/"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
        />
        <comment>Создание первой таблицы</comment>
    </changeSet>

</databaseChangeLog>
